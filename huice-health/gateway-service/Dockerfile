FROM adoptopenjdk:8-jre-hotspot
COPY *.jar /HUICE-gateway.jar

ARG SERVER_PORT
ARG ACTIVE

ARG MYSQL_ADDR
ARG MYSQL_USERNAME
ARG MYSQL_PASSWORD

ARG REDIS_ADDR
ARG REDIS_PORT
ARG REDIS_PWD

ARG NACOS_SERVER_ADDR
ARG NACOS_SERVER_USER
ARG NACOS_SERVER_PASSWORD

ARG MQ_ADDR
ARG MQ_PORT
ARG MQ_USERNAME
ARG MQ_PWD

ENV SERVER_PORT=${SERVER_PORT}
ENV UNIQUE_ID=${UNIQUE_ID}

EXPOSE ${SERVER_PORT}

ENTRYPOINT ["/bin/sh", "-c", "java -jar /HUICE-gateway.jar"]
