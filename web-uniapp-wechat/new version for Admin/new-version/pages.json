{
  "easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	
  
  "pages": [
 
   
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "uni-app"
      }
    },
    {
      "path": "pages/order/index",
      "style": {
        "navigationBarTitleText": "uni-app1"
      }
    },
    {
      "path": "pages/user/index",
      "style": {
        "navigationBarTitleText": "uni-app1"
      }
    },
    {
      "path": "pages/index/toOrder",
      "style": {
        "navigationBarTitleText": "uni-app1231"
      }
    }
 
    
  ],

  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },

  "uniIdRouter": {},

  "tabBar": {
    "color": "#999999",
    "selectedColor": "#FF2E6D",
    "backgroundColor": "#FFFFFF",
    "borderStyle": "white",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "static/tabBar/HomeFalse.png",
        "selectedIconPath": "static/tabBar/HomeTrue.png"
      },
      {
        "pagePath": "pages/order/index",
        "text": "订单",
        "iconPath": "static/tabBar/orderfalse.png",
        "selectedIconPath": "static/tabBar/order.png"
      },
      {
        "pagePath": "pages/user/index",
        "text": "用户",
        "iconPath": "static/tabBar/UserFlase.png",
        "selectedIconPath": "static/tabBar/UserTrue1.png"
      }
    ]
  }
}
